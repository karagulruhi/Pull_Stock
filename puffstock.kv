<SearchScreen>:
    size_hint:0.6,0.7
    pos_hint: {'center_x': 0.5,'center_y': 0.5}
    BoxLayout:

        orientation: 'vertical'
        Label:
            text: "ARAMAK İSTEDİĞİNİZ MÜŞTERİNİN İSMİNİ GİRİN"
          
        TextInput:
            multiline:False
            id:name_search
            padding_y:40,40
            
        Button:
            text:"ARA"
            id: search_order
            disabled: True if name_search.text == '' else False 
            on_press:
                root.manager.current = 'choose'
                root.get_order()

        Button:
            text:"Ana Menü"
            id: back
            on_press:
                root.manager.current = 'main'

