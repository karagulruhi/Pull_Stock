<MainScreen>:


    FloatLayout:
        Button:
            text:"SİPARİŞ GİR"
            id: new_order
            size_hint:(0.2,.2)
            pos_hint:{'x':0.0,'y':0.8}
            on_press:
                root.manager.current = 'new'

                
        Button:
            text:"SİPARİŞ GÜNCELLE"
            id: update_order
            size_hint:(0.2,.2)
            pos_hint:{'x':0.0,'y':0.5}
            on_press:
                root.manager.current = 'search'


<SearchScreen>:
    size_hint:0.6,0.7
    pos_hint: {'center_x': 0.5,'center_y': 0.5}
    BoxLayout:

        orientation: 'vertical'
        Label:
            text: "ARAMAK İSTEDİĞİNİZ MÜŞTERİNİN İSMİNİ GİRİN"
          
        TextInput:
            multiline:False
            id:name_search
            padding_y:40,40
        Button:
            text:"ARA"
            id: search_order
            on_press:
                root.manager.current = 'update'
                root.get_order()
        Button:
            text:"Ane Menü"
            id: back
            on_press:
                root.manager.current = 'main'

         


<UpdateOrderScreen>:
    

    FloatLayout:
        Button:
            text:'ARAMA GERi'
            id: back_search
            size_hint:0.6,0.7
            on_press:
                root.manager.current = 'search'













<NewOrderScreen>
    BoxLayout:
        orientation: 'vertical'
        
        height: self.minimum_height
        spacing: 10




        BoxLayout:
            orientation: 'horizontal'
           
            height: self.minimum_height
            spacing: 10

            Label:
                text: 'İsim:'
                size_hint_x: 0.25
                halign: 'right'

            TextInput:
                id: isim
                size_hint_x: 0.75
                multiline:False
          
        BoxLayout:
            orientation: 'horizontal'
            
            height: self.minimum_height
            spacing: 10

            Label:
                text: 'Telefon No:'
                size_hint_x: 0.25
                halign: 'right'

            TextInput:
                id: telefon_no
                size_hint_x: 0.75
                multiline:False
        BoxLayout:
            orientation: 'horizontal'
            
            height: self.minimum_height
            spacing: 10

            Label:
                text: 'Ürün:'
                size_hint_x: 0.25
                halign: 'right'

            TextInput:
                id: urun
                size_hint_x: 0.75
                multiline:False
        BoxLayout:
            orientation: 'horizontal'
           
            height: self.minimum_height
            spacing: 10

            Label:
                text: 'Adet:'
                size_hint_x: 0.25
                halign: 'right'

            TextInput:
                id: adet
                size_hint_x: 0.75
                multiline:False
        BoxLayout:
            orientation: 'horizontal'
           
            height: self.minimum_height
            spacing: 10

            Label:
                text: 'Sipariş Ödemesi:'
                size_hint_x: 0.25
                halign: 'right'
            Button:
                text:"SİPARİŞ ALINMADI"
                id:pay_info_button
                size_hint_x: 0.4
                background_color : 1.0, 0.0, 0.0, 1.0
            Button:
                text:""
                size_hint_x: 0.4
                
                on_press:
                    root.paymentInfo()


        FloatLayout:
            Button:
                text:"SİPARİŞ GÜNCELLE"
                id: update_order
                size_hint_x: 0.3
                pos_hint: {'center_x': 0.8,'center_y': 0.5}
                disabled: True if isim.text == '' or urun.text == '' or telefon_no.text == '' else False     
                on_press:
                    root.add_new_order()
        
            Button:
                text:"Ana Menü"
                id: back_main_menu
                size_hint_x: 0.2
                pos_hint: {'center_x': 0.2,'center_y': 0.5}
                on_press:
                    root.manager.current='main'